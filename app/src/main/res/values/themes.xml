<resources>
    <style name="Theme.BD_SQLite_2025" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/menu_background</item>
        <item name="colorSecondary">@color/button_background</item>
    </style>

    <style name="MenuButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:drawablePadding">15dp</item>
    </style>
</resources>