<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/content_background"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generación de Reportes"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/rg_tipos_reporte"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="20dp">

            <RadioButton
                android:id="@+id/rb_alquileres_periodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reporte de Alquileres por Período"
                android:checked="true"
                android:layout_marginBottom="10dp"/>

            <RadioButton
                android:id="@+id/rb_peliculas_populares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reporte de Películas más Populares"
                android:layout_marginBottom="10dp"/>

        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha Inicio"
                    android:layout_marginEnd="10dp"/>
                <EditText
                    android:id="@+id/et_fecha_inicio"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:hint="AAAA-MM-DD"
                    android:inputType="date"
                    android:minHeight="48dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha Fin"
                    android:layout_marginEnd="10dp"/>
                <EditText
                    android:id="@+id/et_fecha_fin"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:hint="AAAA-MM-DD"
                    android:inputType="date"
                    android:minHeight="48dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_generar_reporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generar Reporte"
                android:backgroundTint="#FFC107"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>