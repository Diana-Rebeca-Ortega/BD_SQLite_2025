<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dp">

    <TextView android:id="@+id/tv_id_pelicula" android:layout_width="20dp" android:layout_height="wrap_content" android:textStyle="bold" />

    <TextView android:id="@+id/tv_titulo" android:layout_width="80dp" android:layout_height="wrap_content" />

    <TextView android:id="@+id/tv_categoria" android:layout_width="50dp" android:layout_height="wrap_content" />

    <TextView android:id="@+id/tv_alquiler" android:layout_width="50dp" android:layout_height="wrap_content" />

    <TextView android:id="@+id/tv_coste_venta" android:layout_width="50dp" android:layout_height="wrap_content" />

    <TextView android:id="@+id/tv_stock_total" android:layout_width="40dp" android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_editar_pelicula"
        android:layout_width="105dp"
        android:layout_height="70dp"
        android:text="Edit."
        android:textSize="10sp" />

</LinearLayout>